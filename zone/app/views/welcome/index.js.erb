$("#carb_name").html("<%= @zonetor.carb.name %>");
$("#carb_image").attr("src", "<%= image_path(@zonetor.carb.name) %>");
$("#carb_grams").html("<%= grams(@zonetor.carbs) %>");

$("#fat_name").html("<%= @zonetor.fat.name %>");
$("#fat_image").attr("src", "<%= image_path(@zonetor.fat.name) %>");
$("#fat_grams").html("<%= grams(@zonetor.fats) %>");

$("#protein_name").html("<%= @zonetor.protein.name %>");
$("#protein_image").attr("src", "<%= image_path(@zonetor.protein.name) %>");
$("#protein_grams").html("<%= grams(@zonetor.proteins) %>");

$("#total_energy").html("<%= calories(@zonetor.energy) %>");
$("#partition").html(<%= pie_chart({
                   'carboidrati' => calories(@zonetor.carbs_energy),
                   'grassi' => calories(@zonetor.fats_energy),
                   'proteine' => calories(@zonetor.proteins_energy),
               },
               id: 'partition',
               colors: ['lightblue', 'yellow', 'salmon'],
               width: '50',
               height: '50',
               legend: false
     ) %>);


